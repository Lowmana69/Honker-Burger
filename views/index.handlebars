<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
            <h1>Eat A Burger</h1>
        </div>
        <div class="col-xs-6 text-center" class="task">
            <div class="row">
                {{#each burger_data}}
                    {{#unless this.devoured}}
                <div class="col-xs-9 text-center">
                    <pre>{{this.id}}. {{this.burger_name}}</pre>
                </div>
            </div>
            <div class="col-xs-3 text-center">
                <form action="/burgers/update?_method=PUT" method="POST" class="button-size">
                    <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                    <br>
                    <button type="submit" class="btn btn-default">DEVOUR IT!</button>
                </form>
            </div>
            <div>
                {{/unless}}
                {{/each}}
            </div>
            <div class="col-xs-6 text-center" class="task">
                {{#each burger_data}}
                    {{#if this.devoured}}
                        <input type="text" class="form-control" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
                    {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center enter_section">
            <form action="/burgers/create" method="POST">
                <input type="text" name="burger_name" id="enter_text" class="form-control" value="">
                <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
            </form>
            <p>Enter a Burger, to which you are about to DEVOUR!!!!</p>
        </div>
    </div>
</div>